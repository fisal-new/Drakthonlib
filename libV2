local DeviceInfo = {
    Type = "Desktop",
    ScreenSize = Vector2.new(0, 0),
    Scale = 1,
    IsMobile = false,
    IsTablet = false,
    IsDesktop = true
}

local function UpdateDeviceInfo()
    local viewportSize = Camera.ViewportSize
    DeviceInfo.ScreenSize = viewportSize
    
    local aspectRatio = viewportSize.X / viewportSize.Y
    local screenWidth = viewportSize.X
    
    -- Mobile Detection (Phones)
    if screenWidth < 600 or aspectRatio < 0.6 then
        DeviceInfo.Type = "Mobile"
        DeviceInfo.IsMobile = true
        DeviceInfo.IsTablet = false
        DeviceInfo.IsDesktop = false
        DeviceInfo.Scale = 0.8
    -- Tablet Detection
    elseif screenWidth < 1024 then
        DeviceInfo.Type = "Tablet"
        DeviceInfo.IsMobile = false
        DeviceInfo.IsTablet = true
        DeviceInfo.IsDesktop = false
        DeviceInfo.Scale = 0.9
    -- Desktop
    else
        DeviceInfo.Type = "Desktop"
        DeviceInfo.IsMobile = false
        DeviceInfo.IsTablet = false
        DeviceInfo.IsDesktop = true
        DeviceInfo.Scale = 1
    end
end

UpdateDeviceInfo()

local SIZES = {
    -- Window Sizes
    Window = {
        Mobile = {Width = 340, Height = 520},
        Tablet = {Width = 480, Height = 600},
        Desktop = {Width = 600, Height = 420}
    },
    
    -- Navigation Sidebar
    Nav = {
        Mobile = 100,
        Tablet = 140,
        Desktop = 160
    },
    
    -- Element Heights
    Element = {
        Mobile = 32,
        Tablet = 36,
        Desktop = 38
    },
    
    -- Text Sizes
    Text = {
        Title = {Mobile = 14, Tablet = 15, Desktop = 16},
        Label = {Mobile = 11, Tablet = 12, Desktop = 13},
        Small = {Mobile = 10, Tablet = 11, Desktop = 12}
    },
    
    -- Padding
    Padding = {
        Mobile = 8,
        Tablet = 10,
        Desktop = 12
    },
    
    -- Gap between elements
    Gap = {
        Mobile = 6,
        Tablet = 8,
        Desktop = 10
    }
}

local function GetSize(category, subcategory)
    local device = DeviceInfo.Type
    if subcategory then
        return SIZES[category][subcategory][device]
    else
        return SIZES[category][device]
    end
end

local function GetWindowSize()
    local device = DeviceInfo.Type
    local config = SIZES.Window[device]
    
    local viewportSize = Camera.ViewportSize
    
    -- Calculate based on screen size
    local width = math.clamp(
        math.floor(viewportSize.X * (device == "Mobile" and 0.9 or device == "Tablet" and 0.75 or 0.5)),
        config.Width * 0.8,
        math.min(config.Width * 1.2, viewportSize.X - 40)
    )
    
    local height = math.clamp(
        math.floor(viewportSize.Y * (device == "Mobile" and 0.85 or device == "Tablet" and 0.8 or 0.65)),
        config.Height * 0.8,
        math.min(config.Height * 1.2, viewportSize.Y - 40)
    )
    
    return {width, height}
end

--[[
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    ğŸ› ï¸ UTILITY FUNCTIONS
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
]]

local function Tween(obj, props, dur, style, dir)
    if not obj or not obj.Parent then return end
    
    local success, tween = pcall(function()
        return TweenService:Create(
            obj, 
            TweenInfo.new(
                dur or 0.3, 
                style or Enum.EasingStyle.Quad, 
                dir or Enum.EasingDirection.Out
            ), 
            props
        )
    end)
    
    if success and tween then
        tween:Play()
        return tween
    end
    
    return nil
end

local function Create(class, props)
    local obj = Instance.new(class)
    for k, v in pairs(props) do
        if k ~= "Parent" then 
            pcall(function() obj[k] = v end)
        end
    end
    if props.Parent then 
        obj.Parent = props.Parent 
    end
    return obj
end

local function AddCorner(parent, radius)
    return Create("UICorner", {
        Parent = parent,
        CornerRadius = UDim.new(0, radius or 8)
    })
end

local function AddPadding(parent, p)
    local padding = p or GetSize("Padding")
    return Create("UIPadding", {
        Parent = parent,
        PaddingTop = UDim.new(0, padding),
        PaddingLeft = UDim.new(0, padding),
        PaddingRight = UDim.new(0, padding),
        PaddingBottom = UDim.new(0, padding)
    })
end

local function AddStroke(parent, color, thickness)
    return Create("UIStroke", {
        Parent = parent,
        Color = color or Theme.Accent(),
        Thickness = thickness or 1,
        ApplyStrokeMode = Enum.ApplyStrokeMode.Border
    })
end

--[[
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    ğŸ–±ï¸ ENHANCED DRAG SYSTEM
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
]]

local function MakeDraggable(frame, handle)
    local dragging = false
    local dragInput = nil
    local dragStart = nil
    local startPos = nil
    local connection = nil
    
    local function update(input)
        if not dragging then return end
        
        local delta = input.Position - dragStart
        local newPosition = UDim2.new(
            startPos.X.Scale, 
            startPos.X.Offset + delta.X, 
            startPos.Y.Scale, 
            startPos.Y.Offset + delta.Y
        )
        
        local viewportSize = Camera.ViewportSize
        local frameSize = frame.AbsoluteSize
        
        local minX = -frameSize.X * 0.75
        local maxX = viewportSize.X - frameSize.X * 0.25
        local minY = 0
        local maxY = viewportSize.Y - 50
        
        local finalX = math.clamp(newPosition.X.Offset, minX, maxX)
        local finalY = math.clamp(newPosition.Y.Offset, minY, maxY)
        
        frame.Position = UDim2.new(newPosition.X.Scale, finalX, newPosition.Y.Scale, finalY)
    end
    
    handle.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or 
           input.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position
            
            if connection then
                connection:Disconnect()
            end
            
            connection = input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                    if connection then
                        connection:Disconnect()
                        connection = nil
                    end
                end
            end)
        end
    end)
    
    handle.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement or 
           input.UserInputType == Enum.UserInputType.Touch then
            dragInput = input
        end
    end)
    
    UserInputService.InputChanged:Connect(function(input)
        if input == dragInput then
            update(input)
        end
    end)
end

--[[
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    ğŸ’¾ CONFIG SYSTEM
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
]]

function Drakthon:SaveConfig(name)
    name = name or "default"
    local fileName = self.ConfigFolder .. "/" .. name .. ".json"
    
    local success, err = pcall(function()
        if not isfolder(self.ConfigFolder) then
            makefolder(self.ConfigFolder)
        end
        
        local configData = HttpService:JSONEncode(self.Flags)
        writefile(fileName, configData)
    end)
    
    if success then
        self:Notify({
            Title = "Config Saved",
            Content = "Configuration saved: " .. name,
            Type = "Success",
            Duration = 2
        })
        return true
    else
        self:Notify({
            Title = "Save Failed",
            Content = "Failed to save configuration",
            Type = "Error",
            Duration = 3
        })
        return false
    end
end

function Drakthon:LoadConfig(name)
    name = name or "default"
    local fileName = self.ConfigFolder .. "/" .. name .. ".json"
    
    local success, err = pcall(function()
        if not isfile(fileName) then
            error("Config file not found")
        end
        
        local configData = readfile(fileName)
        local loadedFlags = HttpService:JSONDecode(configData)
        
        for flag, value in pairs(loadedFlags) do
            if self.Flags[flag] then
                self.Flags[flag] = value
                
                for _, element in pairs(self.Elements) do
                    if element.Flag == flag and element.Set then
                        element:Set(value)
                    end
                end
            end
        end
    end)
    
    if success then
        self:Notify({
            Title = "Config Loaded",
            Content = "Configuration loaded: " .. name,
            Type = "Success",
            Duration = 2
        })
        return true
    else
        self:Notify({
            Title = "Load Failed",
            Content = "Failed to load configuration",
            Type = "Error",
            Duration = 3
        })
        return false
    end
end

function Drakthon:DeleteConfig(name)
    name = name or "default"
    local fileName = self.ConfigFolder .. "/" .. name .. ".json"
    
    local success = pcall(function()
        if isfile(fileName) then
            delfile(fileName)
        else
            error("Config file not found")
        end
    end)
    
    if success then
        self:Notify({
            Title = "Config Deleted",
            Content = "Configuration deleted: " .. name,
            Type = "Info",
            Duration = 2
        })
        return true
    end
    return false
end

function Drakthon:ListConfigs()
    if not isfolder(self.ConfigFolder) then
        return {}
    end
    
    local configs = {}
    local success, files = pcall(function()
        return listfiles(self.ConfigFolder)
    end)
    
    if success and files then
        for _, file in ipairs(files) do
            if file:match("%.json$") then
                local name = file:match("([^/\\]+)%.json$")
                table.insert(configs, name)
            end
        end
    end
    
    return configs
end

function Drakthon:EnableAutoSave(interval)
    interval = interval or 30
    
    task.spawn(function()
        while true do
            task.wait(interval)
            if next(self.Flags) then
                pcall(function()
                    self:SaveConfig("autosave")
                end)
            end
        end
    end)
end

