        Name = "Navigation",
        Parent = Main,
        BackgroundColor3 = Theme.BG2(),
        BorderSizePixel = 0,
        Position = UDim2.new(0, 0, 0, 50),
        Size = UDim2.new(0, 160, 1, -50),
        ZIndex = 1
