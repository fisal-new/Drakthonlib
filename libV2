    Ti.BackgroundTransparency = 1
    Ti.Text = name
    Ti.Font = Enum.Font.GothamBold
    Ti.TextSize = 15
    Ti.TextColor3 = C.Txt
    Ti.TextXAlignment = Enum.TextXAlignment.Left
    Ti.Parent = TB

    local CB = Instance.new("TextButton")
    CB.AnchorPoint = Vector2.new(1, 0.5)
    CB.Position = UDim2.new(1, -10, 0.5, 1)
    CB.Size = UDim2.new(0, 30, 0, 30)
    CB.BackgroundColor3 = C.Ele
    CB.BorderSizePixel = 0
    CB.Text = "×"
    CB.Font = Enum.Font.GothamBold
    CB.TextSize = 18
    CB.TextColor3 = C.Txt
    CB.Parent = TB
    R(CB, 6)
    Rip(CB)

    CB.MouseEnter:Connect(function() T(CB, {BackgroundColor3 = Color3.fromRGB(220, 50, 50)}) end)
