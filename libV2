    local MB = Instance.new("TextButton")
    MB.AnchorPoint = Vector2.new(1, 0.5)
    MB.Position = UDim2.new(1, -45, 0.5, 1)
    MB.Size = UDim2.new(0, 30, 0, 30)
    MB.BackgroundColor3 = C.Ele
    MB.BorderSizePixel = 0
    MB.Text = "−"
    MB.Font = Enum.Font.GothamBold
    MB.TextSize = 16
    MB.TextColor3 = C.Txt
    MB.Parent = TB
    R(MB, 6)
    Rip(MB)

    local min = false
    local os = M.Size

    MB.MouseEnter:Connect(function() T(MB, {BackgroundColor3 = C.Pri}) end)
    MB.MouseLeave:Connect(function() T(MB, {BackgroundColor3 = C.Ele}) end)
    MB.MouseButton1Click:Connect(function()
        min = not min
        if min then
            T(M, {Size = UDim2.new(M.Size.X.Scale, M.Size.X.Offset, 0, 45)}, 0.25)
