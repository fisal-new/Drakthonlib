            if gethui then 
                return gethui() 
            elseif syn and syn.protect_gui then
                local sg = Instance.new("ScreenGui")
                syn.protect_gui(sg)
                sg.Parent = CoreGui
                return CoreGui
            else
                return RunService:IsStudio() and Players.LocalPlayer.PlayerGui or CoreGui
            end
        end)(),
