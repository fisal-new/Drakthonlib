local Library = {}

-- Services
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local Players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")

-- Colors
local C = {
    BG = Color3.fromRGB(16, 16, 20),
    Top = Color3.fromRGB(20, 20, 26),
    Sur = Color3.fromRGB(24, 24, 30),
    Ele = Color3.fromRGB(30, 30, 38),
    Hov = Color3.fromRGB(38, 38, 48),
    Pri = Color3.fromRGB(147, 51, 234),
    Txt = Color3.fromRGB(255, 255, 255),
    Sub = Color3.fromRGB(160, 160, 170),
}

-- Tween
local function T(o, p, t)
    TweenService:Create(o, TweenInfo.new(t or 0.2, Enum.EasingStyle.Quad), p):Play()
end

-- Round
local function R(o, r)
    local c = Instance.new("UICorner")
    c.CornerRadius = UDim.new(0, r or 8)
    c.Parent = o
end

-- Ripple
local function Rip(b)
    b.ClipsDescendants = true
    b.MouseButton1Down:Connect(function()
        local r = Instance.new("Frame")
        r.AnchorPoint = Vector2.new(0.5, 0.5)
        r.Position = UDim2.new(0.5, 0, 0.5, 0)
        r.Size = UDim2.new(0, 0, 0, 0)
        r.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
        r.BackgroundTransparency = 0.8
        r.BorderSizePixel = 0
        r.Parent = b
        R(r, 999)
        local s = math.max(b.AbsoluteSize.X, b.AbsoluteSize.Y) * 2
        T(r, {Size = UDim2.new(0, s, 0, s), BackgroundTransparency = 1}, 0.5)
        task.delay(0.5, function() if r then r:Destroy() end end)
    end)
end

-- Create Window
function Library:Window(name)
    name = name or "Drakthon Hub"
    
    local G = Instance.new("ScreenGui")
    G.Name = "Drakthon"
    G.ResetOnSpawn = false
    G.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    
    if gethui then
        G.Parent = gethui()
    elseif syn and syn.protect_gui then
        syn.protect_gui(G)
        G.Parent = CoreGui
    else
        G.Parent = CoreGui
    end

    local M = Instance.new("Frame")
    M.Name = "Main"
    M.AnchorPoint = Vector2.new(0.5, 0.5)
